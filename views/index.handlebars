<div class="content cntr">

  <div class="container txt-cntr"><img src="assets/images/tastyBurger.jpg"></div>
  <div class="container">
    <div class="burger-holder" id="uneaten">
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.id}}. {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour It!</button>
              </form>

            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="burger-holder" id="eaten">
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.id}}. {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button type="submit">Send it back!</button>
              </form>

            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

    <div class="container clear txt-cntr" id="create_burger">

    <div class="form-group">
    <form class="create-update-form" action="/" method="POST">

      
        <textarea id="ca" name="name"></textarea></br>
      

      <button type="submit">Add Burger</button>

    </form>
          
    </div>
  <p>Enter a burger you want to eat and click the "Add Burger" button above.</p>
  </div>
</div>